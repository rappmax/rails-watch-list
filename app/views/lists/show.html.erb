
<div class="navbar-lewagon navbar-collapse">
        <%= link_to "See all lists", lists_path %>
</div>
<div class="container">



<h1><%= @list.name %></h1>
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :comment %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>



    <div class="cards">
      <% @list.bookmarks.each do |b| %>

             <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
             <%= cl_image_tag("rb.jpg", width: 200, height: 200, crop: :fill) %>
             </div>
            <div class="card-product-infos"><%= "#{b.movie.title} - #{b.comment} - " %><%= link_to "delete", bookmark_path(b), method: :delete %></div>



      <% end %>

</div>

